    "version": "0.2.0",
    "configurations": [

        {
            "type": "solidityMeadow",
            "request": "launch",
            "name": "Debug Solidity (via unit test run)"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "run tests",
            "program": "/usr/local/lib/node_modules/truffle/build/cli.bundled.js",
            "args": ["test"],
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/test/**/*"
            ]
        }
    ]
}